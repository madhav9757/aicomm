{
  "name": "aicomm",
  "version": "1.1.0",
  "description": "AI-powered git commit assistant with intelligent commit message generation",
  "type": "module",
  "main": "index.js",
  "bin": {
    "aicomm": "./bin/aicomm.js"
  },
  "scripts": {
    "start": "node ./bin/aicomm.js",
    "dev": "node --watch ./bin/aicomm.js",
    "test": "node --test",
    "lint": "eslint src/**/*.js bin/**/*.js",
    "format": "prettier --write \"src/**/*.js\" \"bin/**/*.js\""
  },
  "keywords": [
    "git",
    "cli",
    "ai",
    "commit",
    "conventional-commits",
    "automation",
    "gemini",
    "developer-tools"
  ],
  "author": "Madhav",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@google/genai": "^1.37.0",
    "boxen": "^8.0.1",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "figures": "^6.1.0",
    "inquirer": "^13.1.0",
    "ora": "^9.0.0",
    "picocolors": "^1.1.1",
    "simple-git": "^3.30.0"
  },
  "devDependencies": {
    "eslint": "^9.0.0",
    "prettier": "^3.0.0"
  }
}

